<h1 class="text-center text-2xl font-semibold mt-8">Supervises#home</h1>
<p>Find me in app/views/supervises/home.html.erb</p>

<div>
  <div class = "container">
    <% @exchanges.each do |exchange| %>
      <div class="exchange_review" style="display: flex">
        <div>
          <% shift_owner = Shift.find(exchange.shift_owner_id) %>
          <ul>
            <li>Date du shift: <%= shift_owner.date %></li>
            <li>Heure début: <%= shift_owner.hour_start.strftime("%H:%M") %></li>
            <li>Heure fin: <%= shift_owner.hour_end.strftime("%H:%M") %></li>
            <li>Owner ID : <%= shift_owner.user_id %></li>
            <li>Shift ID : <%= shift_owner.id %></li>
            <li>Working Hours: <%= working_hours_to_h(shift_owner) %></li>
          </ul>
        </div>
        <div class="flex">
          <%=link_to 'Accepter', exchange_accepted_manager_path(exchange.id), class: "ml-2"%>
          |
          <%=link_to 'Refuser', exchange_refused_manager_path(exchange.id), class: "mr-2"%>
        </div>
        <div>
          <% shift_answer = Shift.find(exchange.shift_answer_id) %>
          <ul>
            <li>Date du shift: <%= shift_answer.date %></li>
            <li>Heure début: <%= shift_answer.hour_start.strftime("%H:%M") %></li>
            <li>Heure fin: <%= shift_answer.hour_end.strftime("%H:%M") %></li>
            <li>Owner ID : <%= shift_answer.user_id %></li>
            <li>Shift ID : <%= shift_answer.id %></li>
          </ul>
        </div>

      </div>
      <br><br><br><br>
    <% end %>
  </div>
</div>
