<h1 class="text-center text-2xl font-semibold mt-8">Supervision Dashboard</h1>
<%= link_to "Go to Stats page", stat_path %>
<br><br>
<div class = "reviews container" >
  <% @exchanges.each do |exchange| %>
    <div class="exchange-review">
      <p><strong>Exchange #<%= exchange.id %></strong></p>
      <div class ="exchange-review__overview">
        <div class= "exchange_cards">
          <div>
            <% shift_owner = Shift.find(exchange.shift_owner_id) %>
            <%= render partial: "shared/one_exchange-card", locals: { shift: shift_owner, shift_of_current_user: false } %>
          </div>

          <div class="exchange_symbol">
            <i class="fas fa-exchange-alt"></i>
          </div>

          <div>
            <% shift_answer = Shift.find(exchange.shift_answer_id) %>
            <%= render partial: "shared/one_exchange-card", locals: { shift: shift_owner, shift_of_current_user: false } %>
          </div>
        </div>
      </div>
      <br>
      <div class="exchange-review__manager-answer">
        <%= simple_form_for exchange, url: exchange_path(exchange.id), method: 'PATCH', html: { class: "flex w-9/12 mx-auto justify-around" } do |f| %>
          <%= f.input :accepted_manager, as: :radio_buttons, collection: [[true, 'Yes'], [false, 'No']], label_method: :second, value_method: :first, label: "Accept?" %>
          <%= f.input :message, label: 'Enter your message to users', input_html: { id: 'manager-answer__message' } %>
          <%= f.submit 'Envoyer' %>
        <% end %>
      </div>
  <% end %>
  </div>
</div>
