<h1>Proposition d'échange</h1>

<div class="shift_answered">
  <%= raw(ap @shift_answered)%>
</div>

  <div class="container mx-auto">
    <%= simple_form_for(@shift, url: url_for(action: 'create', controller: 'exchanges'), method: 'POST') do |f| %>
      <%= f.input :date, as: :date, html5: true  %>
      <%= f.input :line_id, collection: @lines %>
      <%= f.input :hour_start %>
      <%= f.input :hour_end %>
      <%= f.input :working_hours, collection: (1..10) %>
      <%= f.input :working_minutes, collection: (0..60).select { |x| x%5 == 0 || x == 0}  %>
      <%= hidden_field_tag :shift_owner_id, @shift_answered.id %>
      <%= f.button :submit, "Faire une 2ème proposition", class: 'button_action'%>
      <%= f.button :submit, "ENVOYER", class: 'button_action'%>
    <% end %>
  </div>
